<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="playerNames" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">textCapCharacters</item>
        <item name="android:maxLength">5</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="buttons" parent="@style/AppTheme">

        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="currentScore" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">numberSigned</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textDirection">ltr</item>
        <item name="android:maxLength">2</item>
    </style>

    <style name="roundScoresTextFields" parent="Theme.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:imeOptions">actionNext</item>

    </style>

    <style name="roundNumber">
        <item name="android:textSize">32sp</item>
    </style>

</resources>
